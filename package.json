{
  "name": "discord-convo-bot",
  "version": "0.1.0",
  "description": "Discord conversation bot for GitFitCode needs, written in TypeScript.",
  "scripts": {
    "build": "tsc -p tsconfig.production.json",
    "clear-commands": "pnpm build && node ./dist/src/scripts/clearRegisteredCommands.js",
    "clear-events": "pnpm build && node ./dist/src/scripts/clearScheduledEvents.js",
    "dev": "pnpm i && nodemon --watch src --exec ts-node ./src/index.ts",
    "lint": "eslint .",
    "pm2": "pnpm build && pm2 start ./dist/src/index.js --name discord-convo-bot",
    "pre-build": "rm -rf ./dist",
    "prepare": "husky",
    "start": "node ./dist/src/index.js",
    "test": "echo 'No tests yet'."
  },
  "author": "GitFitCode",
  "license": "GNU GPLv3",
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.18.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "discord.js": "latest",
    "dotenv": "latest",
    "eslint": "8.57.0",
    "fluent-ffmpeg": "^2.1.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@types/node": "latest",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-config-airbnb-base": "latest",
    "eslint-config-airbnb-typescript": "latest",
    "husky": "latest",
    "nodemon": "^3.1.9",
    "ts-node": "latest",
    "tslib": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": "22.x",
    "pnpm": "9.x"
  }
}
